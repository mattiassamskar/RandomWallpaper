<Window x:Class="RandomWallpaper.AccessKeyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Random Wallpaper" Height="100" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="LightGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label>Unsplash access key</Label>
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="textBox" Grid.Column="0" VerticalContentAlignment="Center" Margin="0, 0, 5, 0"/>
                <Button Grid.Column="1" Content="Save" Click="Button_Click" />
            </Grid>
        </Grid>
    </Grid>
</Window>
